<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to listings_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-list-alt"></i> My listing
      <% end %>
      <%= link_to bookings_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-book"></i> My booking
      <% end %>
      <%= link_to conversations_path, class: "navbar-wagon-item navbar-wagon-link" do %>
<!--         <div class="mailbox-area">
          <span> -->
            <i class="fa fa-envelope"></i> Mailbox
<!--             <span id="mailbox-notifications">1</span>
          </span> -->
<!--         </div> -->
      <% end %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_user.photo.present? %>
            <% avatar_url = current_user.photo.path %>
          <% else %>
            <% avatar_url = current_user.facebook_picture_url || "http://www.queens.edu/_resources/img/placeholders/person-placeholder.jpg" %>
          <% end %>
            <%= cl_image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to profile_path do %>
              <%#= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-user-plus"></i> <%= t(".sign_up", default: "Signup") %>
      <% end %>
      <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-sign-in"></i> <%= t(".sign_in", default: "Login") %>
      <% end %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <% if user_signed_in? %>
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to root_path do %>
              <i class="fa fa-home"></i> Home
            <% end %>
          </li>
          <li>
            <%= link_to profile_path do %>
              <i class="fa fa-user"></i> Profile
            <% end %>
          </li>
          <li>
            <%= link_to bookings_path do %>
              <i class="fa fa-book"></i> My booking
            <% end %>
          </li>
          <li>
            <%= link_to listings_path do %>
              <i class="fa fa-list-alt"></i> My listing
            <% end %>
          </li>
          <li>
            <%= link_to conversations_path do %>
              <i class="fa fa-envelope"></i> Mailbox
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i> Log out
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% else %>
    <!-- Edit here -->
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to new_user_session_path do %>
              <i class="fa fa-sign-in"></i> Login
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path do %>
              <i class="fa fa-user-plus"></i> Signup
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>

