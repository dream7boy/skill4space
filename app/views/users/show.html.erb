<% content_for(:title_tag) do %>
  <%= @user.name %>'s profile | skill4.space: Match your skills with a space that needs it
<% end %>

<div class="profile-container">
  <div class="container">
    <div class="row">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-4">
            <div class="left-profile">
              <% if @user.photo.nil? %>
                <%= image_tag "logo.png", class: "profile-avatar" %>
              <% else %>
                <%= cl_image_tag @user.photo.path, width: 200, height: 300, crop: :fill, class: "profile-avatar" %>
              <% end %>
              <p><i class="fa fa-map-marker"></i> : <%= @user.address %></p>
            </div>
          </div>
          <div class="col-xs-12 col-sm-8">
            <div class="right-profile">
              <h1><%= @user.name %></h1>
              <h3><i class="fa fa-drivers-license"></i> About <%= @user.name %>:</h3>
              <p>User's description should be here User's description should be here User's description should be here</p>
              <div class="profile-skills">
                <div class="profile-head">
                  <div>
                    <h3><i class="fa fa-wrench"></i> Skills</h3>
                  </div>
                </div>
                <ul>
                  <% @user.skills.each do |skill| %>
                    <li class="profile-skill">
                      <%= skill.skill_category %>
                    </li>
                  <% end %>
                </ul>
                <h3><i class="fa fa-users"></i> <%= @user.name %>'s reviews</h3>
                <% @user.user_reviews.each do |review| %>
                  <div class="profile-review">
                    <div class="review-left">
                      <!-- Dynamic Reviewer's photo here -->
                      <%= image_tag "jung.jpg", class: "profile-avatar reviewer-avatar" %>
                      <p>(Static)Junggun Lee <!-- Dynamic Name here --> </p>
                      <div class="stars">
                        <ul>
                          <% review.rating.to_i.times do  %>
                            <li><i class="fa fa-star starred"></i></li>
                          <% end %>
                          <% (5 - review.rating.to_i).times do  %>
                            <li><i class="fa fa-star"></i></li>
                          <% end %>
                        </ul>
                      </div>
                    </div>
                    <div class="review-right">
                      <h4><%= review.title %> by <%= review.reviewer_name %>
                      </h4>
                      <p><%= review.content %></p>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
