<% content_for(:title_tag) do %>
  My listings | skill4.space: Match your skills with a space that needs it
<% end %>

<div class="dashboard-container container">
    <div class="tabs">
        <h2>MY LISTINGS</h2>
    </div>
              <div class="row text-center headings-row">
            <div class="col-sm-2 col-sm-offset-1">
              <h5>PHOTO</h5>
            </div>
            <div class="col-sm-2 col-sm-offset-1">
              <h5>NAME</h5>
            </div>
            <div class="col-sm-1">
              <h5>PRICE</h5>
            </div>
<!--             <div class="col-sm-2">
              <h5>DATES</h5>
            </div> -->
            <div class="col-sm-1 col-sm-offset-2">
              <h5>ACTIONS</h5>
            </div>
 <!--            <div class="col-sm-1">
              <h5>Cancel</h5>
            </div> -->
   <!--          <div class="col-sm-2">
              <h5>STATUS</h5>
            </div> -->
          </div>
    <div id="my-items">
      <div id="my-bookings">
        <ul>
          <% @user.spaces.reverse.each do |space| %>
            <li>
            <div class="product">
              <%= image_tag 'airbnb3.jpg', height: 200, width: 300, crop: :fill, class: "booking-photo" %>
                <div class='product-body'>
                  <div class="row">
                    <div class="col-xs-12 col-sm-3 booking-path">
                      <h5><%= space.name %></h5>
                      <%#= space.bookings.last ? "Booked" : "Pending" %>
                      <!-- change .last to [0] when only one booker per booking? -->
                      <% if space.bookings.last %>
                        <p>Booked by: <%= space.bookings.last.user.name %></p>
                      <p><%= link_to "Review on booker", new_user_user_review_path(space.bookings.last.user) %>
                      </p>
                      <% else %>
                        <p>Pending</p>
                        <p></p>
                      <% end %>
                    </div>
                  <div class="col-xs-12 col-sm-2 col-sm-offset-0.5">
                    <h5><%= space.daily_price %></h5>
                  </div>
                  <div class="col-xs-12 col-sm-2 col-sm-offset-0.5 text-center">
<!--                     < "#{booking.start_date.month}/#{booking.start_date.day}/#{booking.start_date.year} to #{booking.end_date.month}/#{booking.end_date.day}/#{booking.end_date.year}" > -->
                  </div>
                  <div class="col-xs-12 col-sm-2">
                    <ul class="list-inline product-controls hidden-sm hidden-xs">
                      <li class="icons"><%= link_to space, class: "btn" do %><i class="fa fa-lg fa-info-circle" title="View details"></i><% end %></li>
                      <li class="icons"><%= link_to edit_space_path(space), class: "btn" do %><i class="fa fa-lg fa-pencil-square-o" title="Edit"></i><% end %></li>
                      <li class="icons"><%= link_to space, class: "btn", method: :delete, data: { confirm: "Are you sure you want to delete this listing?" } do %><i class="fa fa-lg fa-trash-o" title="Delete"></i><% end %></li>
                    </ul>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
</div>
