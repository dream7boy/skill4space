<% content_for(:title_tag) do %>
  Add new listing | skill4.space: Match your skills with a space that needs it
<% end %>

  <div class="new-space-container container">
    <div class="row">
      <div class="row col-xs-12 col-sm-8 col-sm-offset-2">
        <h2 class="text-center">Create a new listing</h2>
        <%= simple_form_for(@space) do |f| %>
          <% if @space.errors.any? %>
            <div>
              <p>Errors</p>
              <ul>
                <% @space.errors.full_messages.each do |message| %>
                  <li>
                    <%= message %>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= f.input :title, placeholder: "eg.) Please come to use our fully equipped kitchen" %>
          <%= f.input :name, placeholder: "eg.) Cosy Kitchen Tokyo" %>
          <%= f.input :category, collection: ["Office", "Coworking", "Design Studio", "Music Studio", "Dance Studio", "Classroom", "Laboratory", "Kitchen", "Garage", ], prompt: "Choose the category of your space" %>
          <%= f.input :description, placeholder: "eg.) We have a beautiful, clean, and commercial share kitchen located in Tokyo... "%>
          <%= f.input :city, placeholder: "eg.) Tokyo" %>
          <%= f.input :address, placeholder: "eg.) Tokyo, Japan" %>
          <%= f.input :floor_area, placeholder: "eg.) 20m2" %>
          <%= f.input :facility, placeholder: "eg.) Wi-Fi, Large Mixer, Oven..." %>
          <%= f.input :people_capacity, placeholder: "eg.) 100 people" %>
          <%= f.input :start_date, wrapper_html: { class: 'form-inline' }, label_html: { class: 'form-inline-label'} %>
          <%= f.input :end_date, wrapper_html: { class: 'form-inline' }, label_html: { class: 'form-inline-label'} %>
          <%= f.input :opening_hours, wrapper_html: { class: 'form-inline' }, label_html: { class: 'form-inline-label'}, default: Time.parse('8:00') %>
          <%= f.input :closing_hours, wrapper_html: { class: 'form-inline' }, label_html: { class: 'form-inline-label'}, default: Time.parse('20:00') %>
          <%#= f.input :opening_hours, selected: 00, wrapper_html: { class: 'form-inline'}, label_html: { class: 'form-inline-label'} %>
          <%#= f.input :closing_hours, selected: 00, wrapper_html: { class: 'form-inline'}, label_html: { class: 'form-inline-label'} %>
          <%= f.input :is_barter, label_html: { class: 'form-inline-label' } %>
          <%= f.input :required_skill, collection: ["Cooking", "Cleaning", "Design", "Music", "Dance", "Teaching", "Coding", "Farming"], prompt: "Choose your desired skill" %>
          <%= f.input :daily_price, placeholder: "eg.) 100 USD" %>
          <%= f.input :photos, as: :attachinary, label: "Space photos (*Up to 5 photos)" %>
          <p>*First photo will be the main image of the space.</p>
          <br>
          <%= f.submit "CREATE LISTING", class: "btn btn-success btn-lg" %>
        <% end %>
    </div>
    </div>
  </div>
