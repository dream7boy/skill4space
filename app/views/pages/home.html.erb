<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path "coworkingspace.jpg" %>');">
  <div class="banner-content text-center">
    <h1>Match your skills with a space that needs it</h1>
    <div class="form-wrapper">
      <%= form_tag(spaces_path, method: :get) do %>
        <%#= text_field_tag :species, params[:species] %>
        <%= select_tag "city",
          raw("<option>Select city</option>
          <option>Tokyo</option>
          <option>Osaka</option>
          <option>Fukuoka</option>"),
           class: "input-lg form-top" %>
        <%= select_tag "category",
          raw("<option>Select workspace</option>
          <option>Office</option>
          <option>Coworking</option>
          <option>Design studio</option>
          <option>Music studio</option>
          <option>Dance studio</option>
          <option>Classroom</option>
          <option>Laboratory</option>
          <option>Kitchen</option>
          <option>Garage</option>"),
           class: "input-lg form-top" %>

        <%= submit_tag 'Search', name: nil, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

<div class="home-content text-center">
<br>
  <h2>Why use Skill4Space?</h2>
  <br>
  <div class="row">
    <div class="col-sm-3 col-sm-offset-3">
      <h4>About Skill4Share</h4>
      <p>With Skill4Share, users can use their skills in exchange for using company spaces.</p>
    </div>
    <div class="col-sm-3">
      <h4>Testimonials</h4>
      <p></p>
    </div>
  </div>
</div>
